# WhatsApp Business API Configuration
# ====================================

# Your WhatsApp Business Account ID
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Phone Number ID (from Meta Business Suite)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Access Token (from Meta for Developers)
WHATSAPP_ACCESS_TOKEN=your_access_token

# Webhook Verification Token (you create this)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token

# App Secret (from Meta for Developers - App Settings)
WHATSAPP_APP_SECRET=your_app_secret

# API Version (optional, defaults to v18.0)
WHATSAPP_API_VERSION=v18.0

# Webhook Port (optional, defaults to 8080)
WEBHOOK_PORT=8080
